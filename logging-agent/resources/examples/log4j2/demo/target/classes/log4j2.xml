<?xml version="1.0" encoding="UTF-8"?>
<Configuration name="Development">

	<Properties>
		<Property name="Directory">./target/logs</Property>
		<Property name="Filename">log4socket-demo.log</Property>
	</Properties>

	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="[${hostName}][%-5level] %d{ISO8601} [%t]::%logger{36} - %msg%n" />
		</Console>

		<RollingFile name="File" fileName="${Directory}/${Filename}" filePattern="${log-path}/log4socket-demo-%d{yyyy-MM-dd}.log">
			<Policies>
				<TimeBasedTriggeringPolicy interval="1" modulate="true" />
			</Policies>
		</RollingFile>
		
		<Socket name="Shipper" protocol="udp" host="localhost" port="9500">
			<PatternLayout pattern="${hostName} %level %d{ISO8601} %t %logger - %msg%n"/>
		</Socket>
	</Appenders>

	<Loggers>
		<Root level="trace">
			<AppenderRef ref="Console"/>
			<AppenderRef ref="File"/>
			<AppenderRef ref="Shipper"/>
		</Root>		
	</Loggers>

</Configuration>