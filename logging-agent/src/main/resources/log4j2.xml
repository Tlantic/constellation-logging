<?xml version="1.0" encoding="UTF-8"?>
<Configuration name="Development">

	<Properties>
		<Property name="Directory">./target/logs</Property>
		<Property name="Filename">constellation-logging.log</Property>
	</Properties>

	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</Console>

		<RollingFile name="File" fileName="${Directory}/${Filename}"
			filePattern="${log-path}/constellation-logging-%d{yyyy-MM-dd}.log">
			<Policies>
				<TimeBasedTriggeringPolicy interval="1"
					modulate="true" />
			</Policies>
		</RollingFile>
		
		<Socket name="Shipper" host="localhost" port="9500">
			<SerializedLayout />
		</Socket>
	</Appenders>

	<Loggers>
		<Root level="debug">
			<AppenderRef ref="Console" />
			<AppenderRef ref="File" />
			<!-- <AppenderRef ref="Shipper" />  -->
		</Root>
	</Loggers>

</Configuration>